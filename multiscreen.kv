WindowManager:
    Firstwindow:

    Secondwindow:

   

<Firstwindow>
    name:"Firstwindow"
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height
        Label:
            text:"This is first window"
            font_size:28
        Button:
            text:'Next'
            on_release: 
                app.root.current="Secondwindow"
                root.manager.transition.direction="left"

<Secondwindow>
    name:"Secondwindow"
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height
        Label:
            text:'Second Screen'
            font_size:32
            color:"red"
        Button:
            text:"Back"
            on_release: 
                app.root.current="Firstwindow"
                root.manager.transition.direction="right"
