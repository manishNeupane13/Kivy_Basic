<MyGridLayout>
    user_name:user_name
    user_password:user_password
   
    GridLayout:
        cols:1
        size:root.width,root.height
        background_color:(66/255,242/255,245/255)
        padding: 25
        spacing: 25
        GridLayout:
            cols:2
            Label:
                
                text: "UserName"
            TextInput:
                id:user_name
                multiline:False
            Label:
                
                text:"PassWord"
            TextInput:
                id:user_password
                multiline:False
        Button:
            text:"submit"
            font_size:32
            on_press: root.logger()
        Button:
            text:"Clear"
            font_size:32
            on_press:root.clear()

            
